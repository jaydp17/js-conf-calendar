{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "lib": ["esnext"],
    "baseUrl": "./",
    "paths": {
      "ramda": ["node_modules/@types/ramda/index"],
      "ramda/src/*": ["node_modules/@types/ramda/src/*"]
    }
  },
  "include": ["./src/**/*"]
}
